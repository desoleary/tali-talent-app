{
  "name": "tali-talent-app",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@10.11.1",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "test:ci": "turbo run test:ci",
    "migration:create": "pnpm --filter api typeorm migration:create src/migrations/InitMigration -d ./data-source.ts",
    "migration:run": "pnpm --filter api typeorm migration:run -d ./data-source.ts",
    "migration:generate": "pnpm --filter api typeorm migration:generate -d ./data-source.ts -n",
    "migration:revert": "pnpm --filter api typeorm migration:revert -d ./data-source.ts"
  },
  "dependencies": {
    "@nestjs/typeorm": "^11.0.0",
    "mysql2": "^3.14.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.5",
    "@types/node": "^24.2.0",
    "@vitest/ui": "^3.2.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}