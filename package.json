{
  "name": "tali-talent-app",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "migration:run": "ts-node -r tsconfig-paths/register apps/api/ormconfig.ts migration:run",
    "migration:generate": "ts-node -r tsconfig-paths/register apps/api/ormconfig.ts migration:generate -n",
    "migration:create": "ts-node -r tsconfig-paths/register apps/api/ormconfig.ts migration:create -n",
    "migration:revert": "ts-node -r tsconfig-paths/register apps/api/ormconfig.ts migration:revert"
  },
  "dependencies": {
    "@nestjs/typeorm": "^10.0.0",
    "typeorm": "^0.3.20",
    "mysql2": "^3.10.0"
  },
  "devDependencies": {
    "turbo": "latest",
    "typescript": "latest",
    "@types/node": "^20.0.0"
  }
}
